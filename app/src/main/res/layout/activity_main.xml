<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/bgpic3"

    tools:context=".MainActivity">
        <TextView
            android:layout_margin="20dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="10dp"
            android:singleLine="true"
            android:text="ALGO MUSICIA"
            android:textColor="@color/whiteee"
            android:textSize="22sp"
            android:textAlignment="center"


            android:textCursorDrawable="@android:color/holo_red_light"
            android:textColorHighlight="@android:color/background_dark"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <EditText

                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="50dp"
                   android:hint="Search a song"
                        android:id="@+id/songTextBox"
                    android:textSize="10sp"
                    android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                    android:layout_marginTop="100dp"
                  android:background="@drawable/search_design"
                    android:textColor="@android:color/black"


                    >

                </EditText>




                <ListView
                    android:id="@+id/listViewSong"



                    android:layout_marginTop="150dp"
                    android:dividerHeight="10sp"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </ListView>


</RelativeLayout>